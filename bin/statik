#!/usr/bin/perl

use strict;
use warnings;
use Getopt::Long::Descriptive;

use FindBin qw($Bin);
use lib "$Bin/../lib";
use Statik;

$|++;

my ($opt, $usage) = describe_options(
  '%c %o',
  [ 'config|c=s'    => '<config_file> - statik config file' ],
  [ 'force|f'       => 'force all entries to be regenerated' ],
  [ 'noop|n'        => "don't do updates, just show what would be done", 
                       { implies => { verbose => 1 } } ],
  [ 'verbose|v+'    => 'print more verbose output' ],
  [ 'help|h|?'      => 'print usage message and exit' ],
);
print($usage->text), exit if $opt->help;
print($usage->text), exit if @ARGV;

my $s = Statik->new(
  config    => $opt->config,
  force     => $opt->force,
  noop      => $opt->noop,
  verbose   => $opt->verbose || 0,
);
$s->generate;

__END__

